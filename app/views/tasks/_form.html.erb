<%= form_with(model: task, local: true) do |f| %>

  <% if task.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(task.errors.count, "error") %> prevented saving:</h3>
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :status %><br>
    <%= f.select :status, ["ongoing", "completed", "dropped"] %>
  </div>

  <div>
    <%= f.label :priority %><br>
    <%= f.number_field :priority, min: 1, max: 5 %>
  </div>

  <div>
    <%= f.label :start_time %><br>
    <%= f.datetime_local_field :start_time %>
  </div>

  <div>
    <%= f.label :end_time %><br>
    <%= f.datetime_local_field :end_time %>
  </div>

  <br>

  <%= f.submit %>

<% end %>
